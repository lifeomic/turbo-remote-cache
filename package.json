{
  "name": "@lifeomic/turbo-remote-cache",
  "version": "0.0.0",
  "license": "MIT",
  "description": "remote cache server for turbo repo",
  "scripts": {
    "build": "tsc",
    "start": "pm2 start dist/bin/start_server.js --name turbo-cache",
    "stop": "pm2 stop turbo-cache",
    "ts-type-check": "",
    "clean": "rm -rf ./dist",
    "lint": "eslint --cache --cache-location node_modules/.cache/.eslintcache --ext .ts,.tsx,.js,.jsx . --max-warnings 0",
    "prettier": "prettier",
    "test": "jest --silent"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "3.465.0",
    "@koa/router": "^12.0.1",
    "koa": "^2.14.1"
  },
  "devDependencies": {
    "@aws-sdk/util-stream-node": "3.374.0",
    "@swc/core": "^1.3.102",
    "@swc/jest": "^0.2.29",
    "@types/koa": "^2.13.12",
    "@types/koa__router": "^12.0.4",
    "@types/supertest": "^2.0.16",
    "aws-sdk-client-mock": "^3.0.0",
    "aws-sdk-client-mock-jest": "^3.0.0",
    "jest": "^29.7.0",
    "pm2": "^4.0.0",
    "supertest": "^6.3.3",
    "ts-node": "^8.0.2",
    "typescript": "^5.3.2"
  },
  "engines": { "node": ">=18" },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    }
  }
}
